<div id="container2" style="width:100%; height:700px;"></div>
<script>
Highcharts.chart('container2', {
    chart: {
        type: 'column'
    },
    title: {
        text: 'Deaths per country (2017)'
    },
    subtitle: {
        text: 'Source: Uppsala Conflict Data Program'
    },
    xAxis: {
        categories: <%=raw @country %>
    },
    yAxis: {
        min: 0,
        title: {
            text: 'Deaths (total)'
        }
    },
    tooltip: {
        headerFormat: '<span style="font-size:10px">{point.key}</span><table>',
        pointFormat: '<tr><td style="color:{series.color};padding:0">{series.name}: </td>' +
            '<td style="padding:0"><b>{point.y:1f} </b></td></tr>',
        footerFormat: '</table>',
        shared: true,
        useHTML: true
    },
    plotOptions: {
        column: {
            pointPadding: 0.2,
            borderWidth: 0
        }
    },
    series: [{
        name: 'Deaths',
        data: <%=raw @damount %>
    }]
});
</script>
<br><br>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
<script>
Highcharts.chart('container', {
    chart: {
        type: 'line'
    },
    title: {
        text: 'Average clashes per month'
    },
    subtitle: {
        text: 'Source: Uppsala Conflict Data Program'
    },
    xAxis: {
        categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December']
    },
    yAxis: {
        title: {
            text: 'Clashes (total)'
        }
    },
    plotOptions: {
        line: {
            dataLabels: {
                enabled: true
            },
            enableMouseTracking: false
        }
    },
    series: [{
        name: 'Clashes World-Wide',
        data: <%= raw @total_cas %>
    }, {
        name: 'Clashes Afghanistan',
        data: <%= @afg_total_cas %>// data: <%= raw @avg_length_rounded %>

    }, {
        name: 'Clashes Iraq',
        data: <%= @irq_total_cas %>// data: <%= raw @avg_length_rounded %>

    }]
});
</script>

